{
  "name": "@prmargas/react-wysiwyg-editor",
  "version": "0.0.1",
  "description": "A modern, feature-rich WYSIWYG editor for React with dual-mode editing, advanced image handling, and full TypeScript support",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "vite build --mode library",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/html2canvas": "^1.0.0",
    "@types/marked": "^6.0.0",
    "clsx": "^2.1.0",
    "dompurify": "^3.2.6",
    "html2canvas": "^1.4.1",
    "marked": "^16.0.0",
    "react-image-crop": "^11.0.10"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3"
  },
  "keywords": [
    "wysiwyg",
    "editor",
    "react",
    "typescript",
    "rich-text",
    "content-editor",
    "markdown",
    "image-upload",
    "text-formatting",
    "react-component"
  ],
  "author": "Pradeep Margasahayam Prakash",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pradeep241094/react-wysiwyg-editor.git"
  },
  "bugs": {
    "url": "https://github.com/Pradeep241094/react-wysiwyg-editor/issues"
  },
  "homepage": "https://github.com/Pradeep241094/react-wysiwyg-editor#readme",
  "engines": {
    "node": ">=16.0.0"
  }
